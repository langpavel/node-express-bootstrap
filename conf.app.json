{
  "COMMENT":[
    "Every root key here can be overrided in conf.json.",
    "See app/bootstrap/index.js for implementation details"
  ],
  "bootstrap": [
    "express",
    "locals", 
    "redis",
    "middleware/responseTime",
    "middleware/favicon",
    "middleware/methodOverride",
    "middleware/logger",
    "middleware/cookieParser",
    "middleware/bodyParser",

    "middleware/stylus@/stylesheets",

    "middleware/session/redis",
    "middleware/session",
    "middleware/csfr",

	"middleware/passport",
	"middleware/passport/session",
	"middleware/passport/password",

    "router",

    "middleware/static@/",

    "middleware/errorHandler",

    "sync!http@IPv4",
    "sync!http@IPv6",

    "development:repl"
  ],

  "express": {
    "view engine": "jade",
    "views": "./app/views",
    "strict routing": true,
    "case sensitive routing": true,
    "trust proxy": false,
    "json spaces": 2,
    "jsonp callback": false
  },

  "locals": {
    "title": "blog"
  },

  "redis": {
    "host": "127.0.0.1",
    "port": "6379",
    "options": {
      "parser": "hiredis",
      "return_buffers": false,
      "detect_buffers": false,
      "socket_nodelay": true,
      "no_ready_check": false,
      "enable_offline_queue": true
    }
  },

  "middleware/responseTime": {},

  "middleware/favicon": {
    "icon": "./public/favicon.ico"
  },

  "middleware/methodOverride": {
    "key": "_method"
  },

  "middleware/logger": {
    "format": "tiny"
  },

  "middleware/cookieParser": {
    "secret": "Keyboard Cat"
  },

  "middleware/bodyParser": {
  },

  "middleware/stylus": {
    "src": "./public/stylesheets",
    "dest": "./public/stylesheets",
    "useNib": true,
    "compress": true
  },

  "middleware/session/redis": {
    "ttl": 5184000,
    "db": 0,
    "pass": false,
    "prefix": "sess:"
  },
  
  "middleware/session": {
    "key": "sid",
    "cookie": {
      "path": "/",
      "httpOnly": true,
      "maxAge": null
    }
  },

  "middleware/csfr": {
    "value": "(req.body && req.body._csrf) || (req.query && req.query._csrf) || (req.headers['x-csrf-token'])"
  },

  "router": {
  },

  "middleware/static": {
    "root": "./public",
    "maxAge": 60000,
    "hidden": false,
    "redirect": true
  },
  "development:middleware/static": {
    "maxAge": 0
  },


  "http@IPv4": {
    "port": 80,
    "host": "0.0.0.0"
  },
  "http@IPv6": {
    "port": 80,
    "host": "::"
  },
  "development:http@IPv4": {
    "port": 3333,
    "host": "127.0.0.1"
  },
  "development:http@IPv6": {
    "port": 3333,
    "host": "::1"
  },


  "middleware/errorHandler": {
    "dumpExceptions": false, 
    "showStack": false
  },
  "development:middleware/errorHandler": {
    "dumpExceptions": true, 
    "showStack": true
  },



  "model": {
    "user": "usr:"
  },
  "mysql": {
    "host": "localhost",
    "port": 3306,
    "socketPath": null,
    "user": "blog",
    "password": "password",
    "database": "blog",
    "charset": "UTF8_GENERAL_CI",
    "insecureAuth": false,
    "typeCast": true,
    "debug": false,
    "multipleStatements": false
  }
}
