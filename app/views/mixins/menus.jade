mixin usermenu
  .btn-group.pull-right
    if false
      a.btn.dropdown-toggle(data-toggle="dropdown", href="#")
        i.icon-user
        = everyauth.user.name
        span.caret
      ul.dropdown-menu
        li: a(href="#") Profile
        li.divider
        li: a(href="#") Sign Out
    else
      a.btn.dropdown-toggle(data-toggle="dropdown", href="#")
        i.icon-user
        |  nepřihlášen 
        span.caret
      ul.dropdown-menu
        li: a(href="/login") Přihlásit
        li.divider
        li: a(href="/register") Registrace

mixin configmenu
  .btn-group.pull-right
    a.btn.dropdown-toggle(data-toggle="dropdown", href="#")
      i.icon-cog
      span.caret
    ul.dropdown-menu
      li. Language
      li.divider
      li: a(href="#") Sign Out
